<p id="notice"><%= notice %></p>

<h1 class="projecth1 col-sm-4 col-sm-offset-4">Listing Projects</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= link_to 'Show', project %></td>
        <td>
          <% if tech_signed_in? %>
            <%= link_to 'Edit', edit_project_path(project) %>
          <%end%>
        </td>
        <td>
          <% if tech_signed_in? %>
            <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %>
          <%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if tech_signed_in? %>
<%= link_to 'New Project', new_project_path, :class=> "btn newprod" %>
<%end%>
